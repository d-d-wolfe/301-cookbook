<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Superdex Cookbook</title>
  <link rel="stylesheet" href="/styles/base.css"/>
  <link rel="stylesheet" href="/styles/layout.css"/>
  <link rel="stylesheet" href="/styles/modules.css"/>
  <link rel="stylesheet" href="/styles/reset.css"/>
</head>

<body>
  
  <%- include('../layout/header.ejs') %>

  <section id="search">
    <div class="wrapper">
      <% superdexArray.forEach(recipe => { %>

        <div class="box">
         <form action="/pages/show" method="POST">
            <label for="search" name="search">
            <input type="text" name="search">
            <input type="submit">
         </form>
          
        </div>
        
      <% }) %>
    </div>

  </section>>

  <section id="my_superdex">
    <div class="wrapper">
      <% superdexArray.forEach(recipe => { %>

        <div class="box">
          <img src="<%=recipe.image %>"/>
          
        </div>
        
      <% }) %>
    </div>
  </section>>
  
</body>
</html>